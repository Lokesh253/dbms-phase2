<% layout('layouts/boilerplate') -%> 

<div class="row">
    <div class="col-md-6">
        <div class="card" style="width: 18rem;">
            <img src='<%= mitem.img_link %> ' class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= mitem.name %> </h5>
              <p class="card-text"><%= mitem.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">$<%= mitem.cost %> </li>
              <li class="list-group-item">Available or not  </li>
              
            </ul>
            <div class="card-body">
              <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a>
            </div>
          </div>
    </div>

    <div class="col-md-6">
        <div class="h2 mt-3 text-center">Reviews</div>

        <div class="h3">Add Review</div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Add Rating(1-5)</span>
                <input type="text" class="form-control" >
            </div>
        
        <div class="mb-3">
            <label class="form-label" for="review">Review:</label>
            <textarea class="form-control" name="review" id="review" cols="30" rows="3" required></textarea>
        </div>

    </div>
</div>